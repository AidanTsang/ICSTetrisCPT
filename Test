import pygame
import random
import pygame.gfxdraw
pygame.init()

Black = (0, 0, 0)
White = (255, 255, 255)
Green = (0, 255, 0)
Red = (255, 0, 0)
Blue = (0, 0, 255)
Purple = (128, 0, 128)
Orange = (255, 165, 0)
Yellow = (255, 255, 0)

def rand_shape():
    num = random.randrange(2)
    if num == 0:
        return "Shape_S"
    elif num == 1:
        return "Shape_Z"
    elif num == 2:
        return Blue
    elif num == 3:
        return Purple
    elif num == 4:
        return Orange
    elif num == 5:
        return Yellow


def get_shape(shape):
    if shape == "Shape_S":
        Shape_S_width, Shape_S_height = 75, 50
        Shape_S = pygame.Surface((Shape_S_width,Shape_S_height), pygame.SRCALPHA)
        pygame.gfxdraw.filled_polygon(Shape_S, ((0,25),(0,50),(50,50),(50,25),(75,25),(75,0),(25,0),(25,25)),Green)
        return Shape_S
    elif shape == "Shape_Z":
        Shape_Z = pygame.Surface((75,50), pygame.SRCALPHA)
        pygame.gfxdraw.filled_polygon(Shape_Z, ((75,25),(75,50),(25,50),(25,25),(0,25),(0,0),(50,0),(50,25)),Red)

class Player(pygame.sprite.Sprite):
    def __init__(self):
        pygame.sprite.Sprite.__init__(self)
        self.shape = get_shape(rand_shape())
        self.image = self.shape
        self.rect = self.image.get_rect()
        self.walls = None
        self.change_x = 0
        self.change_y = 0

    def update(self):
        self.rect.x += self.change_x
        block_hit_list = pygame.sprite.spritecollide(self, self.walls, False)
        for block in block_hit_list:
            if self.change_x > 0:
                self.rect.right = block.rect.left
            else:
                self.rect.left = block.rect.right
        self.rect.y += self.change_y
        block_hit_list = pygame.sprite.spritecollide(self, self.walls, False)
        for block in block_hit_list:
            if self.change_y > 0:
                self.rect.bottom = block.rect.top
            else:
                self.rect.top = block.rect.bottom

    def go_left(self):
        self.change_x = -25

    def go_right(self):
        self.change_x = 25

    def go_down(self):
        self.change_y = 25

    def stop(self):
        self.change_x = 0

    def stop_fall(self):
        self.change_y = 0

class Wall(pygame.sprite.Sprite):
    def __init__(self, x, y, width, height):
        super().__init__()
        self.image = pygame.Surface([width, height])
        self.image.fill((0,0,0))
        self.rect = self.image.get_rect()
        self.rect.y = y
        self.rect.x = x

all_sprite_list = pygame.sprite.Group()
wall_list = pygame.sprite.Group()
bottom_walls = pygame.sprite.Group()

wall = Wall(75, 50, 1, 501)
wall_list.add(wall)
all_sprite_list.add(wall)

wall = Wall(75, 50, 251, 1)
wall_list.add(wall)
all_sprite_list.add(wall)

wall = Wall(326, 50, 1, 501)
wall_list.add(wall)
all_sprite_list.add(wall)

wall = Wall(75, 551, 251, 1)
wall_list.add(wall)
all_sprite_list.add(wall)
bottom_walls.add(Wall(75, 550, 251, 1))



def main():
    size = (500, 600)
    screen = pygame.display.set_mode(size)
    pygame.display.set_caption("Test3.0")
    clock = pygame.time.Clock()
    timer = 0
    block_list = pygame.sprite.Group()
    player = Player()
    player.walls = wall_list
    active_sprite_list = pygame.sprite.Group()
    player.rect.x = 176
    player.rect.y = 51
    active_sprite_list.add(player)
    done = False
    while not done:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                done = True
        if timer == 20:
            player.change_y = 25
            timer = 0
        else:
            player.change_y = 0
        keys = pygame.key.get_pressed()
        if keys[pygame.K_LEFT] and player.change_x == 0:
            player.go_left()
        elif keys[pygame.K_RIGHT] and player.change_x == 0:
            player.go_right()
        else:
            player.stop()
        if keys[pygame.K_DOWN] or player.change_y != 0:
            player.go_down()
        elif keys[pygame.K_UP] and False:
            player.change_y = -25
        else:
            player.stop_fall()
        screen.fill(White)
        all_sprite_list.draw(screen)
        for i in range(51, 550, 25):
            for k in range(76, 325, 25):
                pygame.draw.rect(screen, (200,200,200), [k, i, 25, 25], 1)
        pygame.draw.rect(screen, Black, [74,49,253,503], 2)
        player.update()
        active_sprite_list.draw(screen)
        bottom_hit_list = pygame.sprite.spritecollide(player, bottom_walls, False)
        for i in bottom_hit_list:
            if player.change_y > 0:
                wall = Wall(player.rect.x, player.rect.y, 1, 1)
                wall_list.add(wall)
                all_sprite_list.add(wall)
                block_list.add(wall)
                bottom_walls.add(Wall(player.rect.x, player.rect.y - 1, 1, 1))
                player = Player()
                player.walls = wall_list
                player.rect.x = 176
                player.rect.y = 51
                active_sprite_list.add(player)
        pygame.display.flip()
        clock.tick(20)
        timer += 1

if __name__ == "__main__":
    main()
