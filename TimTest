import pygame, random
pygame.init()
size = (450, 550)
screen = pygame.display.set_mode(size)
pygame.display.set_caption("Test4.0")

Black = (0, 0, 0)
White = (255, 255, 255)
Green = (0, 255, 0)
Red = (255, 0, 0)
Blue = (0, 0, 255)
Purple = (128, 0, 128)
Orange = (255, 165, 0)
Yellow = (255, 255, 0)
LightBlue = (0, 255, 255)

width = 10
length = 20
board = [[0 for i in range(width)] for k in range(length)]
for i in range(length):
    for j in range(width):
        board[i][j] = White

