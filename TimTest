def go_left(shape):
    for i in range(len(shape)):
        shape[i][0]-=1

def go_right(shape):
    for i in range(3):
        shape[i][0]+=25

def drop(shape):
    for i in range(3):
        shape[i][1]+=25

#    def stop(self):
#        self.change_x = 0

#    def stop_fall(self):
#        self.change_y = 0

def rotate(shape):
    for i in range(3):
        oldX = shape[i][0]
        shape[i][0]= 0-2*shape[i][1]
        shape[i][1]=oldX
    return shape

