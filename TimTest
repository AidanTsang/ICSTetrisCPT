def rand_shape(num):
    if num == 0:
        Shape_Z = [[-1, 0], [0, 0], [0, 1], [1, 1]]
        return Shape_Z
    elif num == 1:
        Shape_S = [[-1, 1], [0,1], [0,0], [1,0]]
        return Shape_S
    elif num == 2:
        Shape_Square = [[0,1], [1,1], [1,0], [0,0]]
        return Shape_Square
    elif num == 3:
        Shape_I = [[-1, 0], [0, 0], [1, 0], [2, 0]]
        return Shape_I
    elif num == 4:
        Shape_L = [[-1 ,1], [-1, 0], [0, 0], [1, 0]]
        return  Shape_L
    elif num == 5:
        Shape_RevL = [[-1, 0], [0, 0], [1, 0], [1, 1]]
        return Shape_RevL
    elif num == 6:
        Shape_T = [[ -1, 0], [0, 0], [1, 0], [0, 1]]
        return Shape_T

def shape_color(num):
    if num == 0:
        return Red
    if num == 1:
        return Green
    if num == 2:
        return Yellow
    if num == 3:
        return LightBlue
    if num == 4:
        return Blue
    if num == 5:
        return Orange
    if num == 6:
        return Purple
